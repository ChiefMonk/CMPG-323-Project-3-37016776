@model IEnumerable<Project3.DeviceManagement.WebAPP.Models.ModelZone>

@{
    ViewData["Title"] = "Zones";
}

<h1>
    Zones
    <a asp-action="Create">
        <img src="~/images/create.png" style="height:30px; width:30px; position:relative; top:-2px" />
    </a>
</h1>
<hr />
<span class="@TempData["MessageClass"]">@TempData["MessageData"]</span>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ZoneName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ZoneDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ZoneName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ZoneDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ZoneId">
                        <img src="~/images/edit.png" style="height:20px;width:20px;" />
                    </a>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.ZoneId">
                        <img src="~/images/details.png" style="height:20px;width:20px;" />
                    </a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.ZoneId">
                        <img src="~/images/delete.png" style="height:20px;width:20px;" />
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
