@model Project3.DeviceManagement.WebAPP.Models.ModelZone

@{
    ViewData["Title"] = "Edit Zone";
}

<h1>Edit Zone</h1>
<hr />
<span class="@TempData["MessageClass"]">@TempData["MessageData"]</span>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ZoneId" />
            <div class="form-group">
                <label asp-for="ZoneName" class="control-label"></label>
        <input asp-for="ZoneName" class="form-control" maxlength="30" />
                <span asp-validation-for="ZoneName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ZoneDescription" class="control-label"></label>
        <input asp-for="ZoneDescription" class="form-control" maxlength="50" />
                <span asp-validation-for="ZoneDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateCreated" class="control-label"></label>
                <input asp-for="DateCreated" class="form-control" readonly="readonly" />
                <span asp-validation-for="DateCreated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
